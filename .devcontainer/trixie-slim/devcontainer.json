{
	"name": "rust-book-devcontainer",

	"build": {
		"dockerfile": "../Dockerfile.debian",
		"context": "..",
		"args": {
			"BASE_IMAGE": "debian",
			"BASE_TAG": "trixie-slim"
		}
	},

	"remoteUser": "vscode",

    // Note: postCreateCommand will not work when using a vscode workspace file
	"workspaceMount": "source=${localWorkspaceFolder}/..,target=/home/vscode/workspace,type=bind",
	"workspaceFolder": "/home/vscode/workspace/rust-book/.vscode/rust-book.code-workspace",

	"containerEnv": {
		"SHELL": "/bin/zsh"
	}
}
