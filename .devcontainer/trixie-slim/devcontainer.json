{
	"name": "rust-book-devcontainer",

	"build": {
		"dockerfile": "../Dockerfile.debian",
		"context": "..",
		"args": {
			"BASE_IMAGE": "debian",
			"BASE_TAG": "trixie-slim"
		}
	},

	"remoteUser": "vscode",

	"workspaceMount": "source=${localWorkspaceFolder}/..,target=/app,type=bind",
	"workspaceFolder": "/app/backend/.vscode/backend.code-workspace",

	"postCreateCommand": "rustup --version || true",

	"containerEnv": {
		"SHELL": "/bin/bash"
	}
}
